#!/bin/bash

echo "-----------------------------------------------"
echo "A very simple script to make sslyze a little quicker to kick off"
echo "By Glenn 'devalias' Grant (devalias.net)"
echo "v0.1"
echo "-----------------------------------------------"

if [ -z "$1" ]; then
  echo "Usage: $0 domain"
  exit
fi

sslyze --regular --hide_rejected_ciphers --http_headers $@

